<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Lesy Luxury Dashboard</title>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #000;
    color: #fff;
    padding: 20px;
    margin: 0;
  }

  header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  #hamburger {
    font-size: 30px;
    cursor: pointer;
    user-select: none;
  }

  header h1 {
    font-size: 36px;
    margin: 0;
    flex-grow: 1;
    text-align: center;
  }

  /* Search bar */
  #search-bar {
    width: 100%;
    max-width: 400px;
    padding: 10px;
    font-size: 18px;
    border-radius: 5px;
    border: none;
    margin-bottom: 20px;
  }

  /* Sidebar */
  #sidebar {
    position: fixed;
    top: 0;
    left: -300px;
    width: 250px;
    height: 100%;
    background-color: #111;
    color: #fff;
    padding: 20px;
    transition: left 0.3s ease;
    z-index: 1000;
    overflow-y: auto;
  }

  #sidebar h3 { margin-top:0; }
  #sidebar ul { list-style: none; padding:0; margin:0; font-size:18px; }
  #sidebar ul li { margin: 15px 0; }
  #sidebar a { color: #fff; text-decoration: none; }
  #closeSidebar {
    margin-top: 20px;
    padding: 10px 15px;
    font-size: 18px;
    cursor: pointer;
    border: none;
    border-radius: 5px;
    background: #e91e63;
    color: #fff;
  }

  /* Products grid */
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .product {
    background-color: #111;
    border: 2px solid #555;
    border-radius: 10px;
    width: calc(50% - 20px);
    padding: 15px;
    text-align: center;
    box-sizing: border-box;
  }

  .product img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
  }

  .product h3 { font-size: 24px; margin: 15px 0 5px; }
  .product p { font-size: 20px; margin: 5px 0; }

  .cart-controls {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .cart-controls span {
    font-size: 22px;
    font-weight: bold;
    min-width: 30px;
    text-align: center;
    display: inline-block;
  }

  .cart-controls button {
    padding: 8px 15px;
    font-size: 18px;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    background-color: #e91e63;
    color: #fff;
    cursor: pointer;
    transition: 0.2s;
  }

  .cart-controls button:hover { background-color: #d81b60; }

  #cart-summary {
    margin-top: 30px;
    font-size: 24px;
    text-align: center;
  }

  #cart-summary button {
    font-size: 20px;
    padding: 10px 20px;
  }

  a { text-decoration: none; }
</style>
</head>
<body>

<header>
  <div id="hamburger">â˜°</div>
  <h1>Welcome to Lesy Luxury</h1>
</header>

<!-- Search -->
<input type="text" id="search-bar" placeholder="Search products..." onkeyup="filterProducts()">

<!-- Sidebar -->
<div id="sidebar">
  <h3>Menu</h3>
  <hr style="border:1px solid #555;">
  <ul>
    <li><a href="/privacy-policy">Privacy Policy</a></li>
    <li><a href="/contact-support">Contact Support</a></li>
  </ul>
  <button id="closeSidebar">Close</button>
</div>

<!-- Products -->
<div class="container" id="product-container">
  <% products.forEach(product => { %>
    <div class="product" data-name="<%= product.name.toLowerCase() %>">
      <img src="<%= product.img %>" alt="<%= product.name %>">
      <h3><%= product.name %></h3>
      <p>$<%= product.price.toFixed(2) %></p>

      <% const cartItem = cart.find(c => c.id === product.id); %>
      <div class="cart-controls">
        <% if(cartItem){ %>
          <!-- Show plus/minus if in cart -->
          <form method="POST" action="/cart/decrease" style="display:inline">
            <input type="hidden" name="id" value="<%= product.id %>">
            <button type="submit">-</button>
          </form>
          <span><%= cartItem.qty %></span>
          <form method="POST" action="/cart/increase" style="display:inline">
            <input type="hidden" name="id" value="<%= product.id %>">
            <button type="submit">+</button>
          </form>
        <% } else { %>
          <!-- Show Add button if not in cart -->
          <form method="POST" action="/cart/add">
            <input type="hidden" name="id" value="<%= product.id %>">
            <button type="submit">Add to Cart</button>
          </form>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>

<!-- Cart Summary -->
<div id="cart-summary">
  <p>Items: <%= cart.reduce((sum,i)=>sum+i.qty,0) %> | Total: $<%= cart.reduce((sum,i)=>sum+i.price*i.qty,0).toFixed(2) %></p>
  <% if(cart.length > 0){ %>
    <a href="/checkout"><button>Order</button></a>
  <% } %>
</div>

<script>
const hamburger = document.getElementById("hamburger");
const sidebar = document.getElementById("sidebar");
const closeSidebar = document.getElementById("closeSidebar");

// Sidebar toggle
hamburger.addEventListener("click", () => sidebar.style.left = "0");
closeSidebar.addEventListener("click", () => sidebar.style.left = "-300px");

// Close sidebar when clicking outside
document.addEventListener("click", e => {
  if (!sidebar.contains(e.target) && !hamburger.contains(e.target)) {
    sidebar.style.left = "-300px";
  }
});

// Search filter
function filterProducts() {
  const input = document.getElementById('search-bar').value.toLowerCase();
  document.querySelectorAll('.product').forEach(p => {
    p.style.display = p.dataset.name.includes(input) ? 'block' : 'none';
  });
}
</script>

</body>
</html>
