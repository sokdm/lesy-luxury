<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Lesy Luxury Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
body{
  margin:0;
  padding:15px;
  font-family:Arial, sans-serif;
  background:#f2f2f2;
  color:#000;
}

/* HEADER */
header{
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin-bottom:15px;
}
.header-left{
  display:flex;
  align-items:center;
  gap:15px;
}
#menuBtn{
  font-size:28px;
  cursor:pointer;
}
header h1{
  margin:0;
  font-size:24px;
}

/* NOTIFICATION */
#notify{
  position:relative;
  font-size:26px;
  cursor:pointer;
}
#notify span{
  position:absolute;
  top:-6px;
  right:-8px;
  background:red;
  color:#fff;
  font-size:12px;
  padding:2px 6px;
  border-radius:50%;
}

/* SEARCH */
#search{
  width:100%;
  padding:12px;
  font-size:16px;
  margin-bottom:15px;
  border-radius:8px;
  border:1px solid #ccc;
}

/* SIDEBAR */
#sidebar{
  position:fixed;
  top:0;
  left:-260px;
  width:240px;
  height:100%;
  background:#fff;
  padding:20px;
  box-shadow:2px 0 10px rgba(0,0,0,.2);
  transition:.3s;
  z-index:1000;
}
#sidebar a{
  display:block;
  margin:15px 0;
  color:#000;
  text-decoration:none;
  font-size:18px;
}
#close{
  margin-top:20px;
  padding:10px;
  width:100%;
  font-size:16px;
}

/* PRODUCTS */
.products{
  display:grid;
  grid-template-columns:repeat(2,1fr);
  gap:15px;
}
.product{
  background:#fff;
  border-radius:12px;
  padding:10px;
}
.product img{
  width:100%;
  height:220px;
  object-fit:cover;
  border-radius:10px;
}
.product h3{
  margin:10px 0 5px;
}
.product p{
  font-weight:bold;
}

/* CART */
.cart-controls{
  display:flex;
  justify-content:center;
  align-items:center;
  gap:10px;
}
.cart-controls button{
  padding:6px 14px;
  font-size:18px;
  border:none;
  background:#000;
  color:#fff;
  border-radius:6px;
}
.cart-controls span{
  font-size:18px;
}

/* SUMMARY */
.summary{
  margin-top:20px;
  text-align:center;
}
.summary button{
  margin-top:10px;
  padding:12px 25px;
  font-size:18px;
  background:#000;
  color:#fff;
  border:none;
  border-radius:8px;
}

/* NOTIFICATION PANEL */
#noteBox{
  display:none;
  position:fixed;
  right:15px;
  top:70px;
  width:300px;
  max-height:400px;
  overflow:auto;
  background:#fff;
  box-shadow:0 5px 15px rgba(0,0,0,.3);
  border-radius:10px;
  padding:15px;
  z-index:2000;
}
#noteBox h3{margin-top:0;}
.note{
  padding:10px;
  border-bottom:1px solid #ddd;
  font-size:14px;
}
</style>
</head>

<body>

<%
  const cartSafe = cart || [];
  const notes = (typeof notifications !== "undefined") ? notifications : [];
%>

<header>
  <div class="header-left">
    <div id="menuBtn">â˜°</div>
    <h1>Lesy Luxury</h1>
  </div>

  <div id="notify">
    ðŸ””
    <% if(notes.length){ %>
      <span><%= notes.length %></span>
    <% } %>
  </div>
</header>

<input id="search" placeholder="Search products..." onkeyup="filter()">

<div id="sidebar">
  <a href="/dashboard">Dashboard</a>
  <a href="/contact-support">Support</a>
  <a href="/privacy">Privacy Policy</a>
  <button id="close">Close</button>
</div>

<div id="noteBox">
  <h3>Notifications</h3>
  <% if(!notes.length){ %>
    <p>No notifications</p>
  <% } else { %>
    <% notes.forEach(n=>{ %>
      <div class="note"><%= n.message %></div>
    <% }) %>
  <% } %>
</div>

<div class="products" id="list">
  <% products.forEach(p=>{ 
    const item = cartSafe.find(c=>c.id===p.id);
  %>
  <div class="product" data-name="<%= p.name.toLowerCase() %>">
    <img src="<%= p.image || p.img %>">
    <h3><%= p.name %></h3>
    <p>$<%= p.price.toFixed(2) %></p>

    <div class="cart-controls">
      <% if(item){ %>
        <form method="POST" action="/cart/decrease">
          <input type="hidden" name="id" value="<%= p.id %>">
          <button>-</button>
        </form>

        <span><%= item.qty %></span>

        <form method="POST" action="/cart/increase">
          <input type="hidden" name="id" value="<%= p.id %>">
          <button>+</button>
        </form>
      <% } else { %>
        <form method="POST" action="/cart/add">
          <input type="hidden" name="id" value="<%= p.id %>">
          <button>Add to Cart</button>
        </form>
      <% } %>
    </div>
  </div>
  <% }) %>
</div>

<div class="summary">
  <p>
    Items: <%= cartSafe.reduce((s,i)=>s+i.qty,0) %> |
    Total: $<%= cartSafe.reduce((s,i)=>s+i.qty*i.price,0).toFixed(2) %>
  </p>

  <% if(cartSafe.length){ %>
    <a href="/checkout"><button>Order</button></a>
  <% } %>
</div>

<script>
menuBtn.onclick=()=>sidebar.style.left="0";
close.onclick=()=>sidebar.style.left="-260px";

notify.onclick=()=>{
  noteBox.style.display = noteBox.style.display==="block" ? "none" : "block";
};

function filter(){
  const v=search.value.toLowerCase();
  document.querySelectorAll(".product").forEach(p=>{
    p.style.display=p.dataset.name.includes(v)?"block":"none";
  });
}
</script>

</body>
</html>
