<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Support</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #121212;
      color: #ffffff;
    }
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      font-size: 3rem;
      text-align: center;
      margin-bottom: 30px;
      color: #ff9800;
    }
    .chat-box {
      background-color: #1e1e1e;
      border-radius: 15px;
      padding: 20px;
      max-height: 600px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 15px;
      margin-bottom: 20px;
      border: 2px solid #333;
    }
    .message {
      padding: 15px 20px;
      border-radius: 15px;
      max-width: 70%;
      font-size: 1.3rem;
      line-height: 1.5;
      word-wrap: break-word;
    }
    .message.user {
      background-color: #ff9800;
      color: #121212;
      align-self: flex-end;
    }
    .message.admin {
      background-color: #333333;
      color: #ffffff;
      align-self: flex-start;
    }
    form {
      display: flex;
      gap: 10px;
    }
    input[type="text"] {
      flex: 1;
      padding: 18px;
      border-radius: 15px;
      border: none;
      font-size: 1.2rem;
      outline: none;
    }
    button {
      background-color: #ff9800;
      border: none;
      padding: 18px 30px;
      border-radius: 15px;
      font-size: 1.2rem;
      font-weight: 700;
      cursor: pointer;
      color: #121212;
      transition: 0.2s;
    }
    button:hover {
      background-color: #e68a00;
    }
    ::-webkit-scrollbar {
      width: 10px;
    }
    ::-webkit-scrollbar-thumb {
      background-color: #555;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Support Chat</h1>
    <div class="chat-box" id="chatBox">
      <% if (messages && messages.length > 0) { %>
        <% messages.forEach(msg => { %>
          <div class="message <%= msg.sender === 'user' ? 'user' : 'admin' %>">
            <%= msg.message %>
            <div style="font-size:0.8rem; opacity:0.6; margin-top:5px;">
              <%= new Date(msg.createdAt).toLocaleString() %>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div style="text-align:center; color:#888;">No messages yet. Start the conversation!</div>
      <% } %>
    </div>

    <form id="msgForm">
      <input type="text" id="msgInput" placeholder="Type your message..." required autocomplete="off">
      <button type="submit">Send</button>
    </form>
  </div>

  <!-- Socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    const chatBox = document.getElementById("chatBox");
    const msgForm = document.getElementById("msgForm");
    const msgInput = document.getElementById("msgInput");
    const userEmail = "<%= user.email %>";

    // Join the user's room
    socket.emit("joinRoom", userEmail);

    // Load initial messages (from server-rendered EJS)
    <% if (messages && messages.length > 0) { %>
      const initialMsgs = <%- JSON.stringify(messages) %>;
      initialMsgs.forEach(msg => {
        const div = document.createElement("div");
        div.className = "message " + (msg.sender === "user" ? "user" : "admin");
        div.innerHTML = msg.message + `<div style="font-size:0.8rem; opacity:0.6; margin-top:5px;">${new Date(msg.createdAt).toLocaleString()}</div>`;
        chatBox.appendChild(div);
      });
    <% } %>

    chatBox.scrollTop = chatBox.scrollHeight;

    // Listen for new messages in real-time
    socket.on("newMessage", (msg) => {
      const div = document.createElement("div");
      div.className = "message " + (msg.sender === "user" ? "user" : "admin");
      div.innerHTML = msg.message + `<div style="font-size:0.8rem; opacity:0.6; margin-top:5px;">${new Date(msg.createdAt).toLocaleString()}</div>`;
      chatBox.appendChild(div);
      chatBox.scrollTop = chatBox.scrollHeight;
    });

    // Send message
    msgForm.addEventListener("submit", (e) => {
      e.preventDefault();
      const message = msgInput.value.trim();
      if (!message) return;
      socket.emit("sendMessage", { email: userEmail, message });
      msgInput.value = "";
    });
  </script>
</body>
</html>
